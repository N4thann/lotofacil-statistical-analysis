@model IEnumerable<Lotofacil.Domain.Entities.ContestActivityLog>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Log de Atividades dos Concursos</h1>
            </div>
            <div class="col-sm-6">
                <button class="btn btn-success float-right" id="exportExcel">
                    <i class="fas fa-file-excel"></i> Exportar Excel
                </button>
            </div>
        </div>
    </div>
</section>

<div class="card card-orange" style="margin:16px;">
    <div class="card-header">
        <h3 class="card-title">Filtros</h3>
    </div>
    <div class="card-body">
        <form id="filterForm">
            <div class="row">
                <div class="col-md-4">
                    <label for="name">Nome do Concurso</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Nome">
                </div>
                <div class="col-md-4">
                    <label for="startDate">Data Inicial</label>
                    <input type="date" class="form-control" id="startDate" name="startDate">
                </div>
                <div class="col-md-4">
                    <label for="endDate">Data Final</label>
                    <input type="date" class="form-control" id="endDate" name="endDate">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12 text-right">
                    <button type="button" class="btn btn-primary" id="applyFilters">
                        <i class="fas fa-filter"></i> Aplicar Filtros
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped text-center" id="tabela-log">
            <thead>
                <tr>
                    <th>Nome do Concurso</th>
                    <th>Data</th>
                    <th>Números</th>
                    <th>Coincidiu com Concurso Base</th>
                    <th>Nome Base</th>
                    <th>Números Base</th>
                    <th>Data Criação</th>
                </tr>
            </thead>
            <tbody>
                <!-- Registros carregados dinamicamente via JS -->
            </tbody>
        </table>

        <div class="pagination-container mt-3">
            <nav>
                <ul class="pagination justify-content-center" id="pagination">
                    <!-- Paginação será gerada dinamicamente -->
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        let currentPage = 1;

        function loadLogs(pageNumber = 1) {
            const filters = {
                name: $('#name').val(),
                startDate: $('#startDate').val(),
                endDate: $('#endDate').val(),
                pageNumber: pageNumber,
                pageSize: 10
            };

            $.get('/YourController/GetContestActivityLogs', filters, function (data) {
                const { Logs, TotalRecords } = data;

                const tbody = $('#tabela-log tbody');
                tbody.empty();
                Logs.forEach(log => {
                    tbody.append(`
                                <tr>
                                    <td>${log.name}</td>
                                    <td>${log.date}</td>
                                    <td>${log.numbers}</td>
                                    <td>${log.matchedAnyBaseContest ? 'Sim' : 'Não'}</td>
                                    <td>${log.baseContestName ?? 'N/A'}</td>
                                    <td>${log.baseContestNumbers ?? 'N/A'}</td>
                                    <td>${log.createTime}</td>
                                </tr>
                            `);
                });

                // Atualiza a paginação
                updatePagination(pageNumber, TotalRecords);
            });
        }

        function updatePagination(currentPage, totalRecords) {
            const totalPages = Math.ceil(totalRecords / 10);
            const pagination = $('#pagination');
            pagination.empty();

            for (let i = 1; i <= totalPages; i++) {
                pagination.append(`
                            <li class="page-item ${i === currentPage ? 'active' : ''}">
                                <button class="page-link" onclick="loadLogs(${i})">${i}</button>
                            </li>
                        `);
            }
        }

        // Eventos
        $('#applyFilters').click(() => loadLogs(1));
        $('#exportExcel').click(() => {
            const filters = $('#filterForm').serialize();
            window.location.href = `/ContestActivityLogController/ExportToExcel?${filters}`;
        });

        // Inicialização
        $(document).ready(() => loadLogs());
    </script>
}
