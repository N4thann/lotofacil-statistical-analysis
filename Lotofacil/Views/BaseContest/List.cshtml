@model IEnumerable<Lotofacil.Domain.Entities.BaseContest>
@{
    ViewData["Title"] = "Listar Concursos Base";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Lista de Concursos Base</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Index">Página Inicial</a></li>
                    <li class="breadcrumb-item active">Concursos Base</li>
                </ol>
            </div>
        </div>
    </div>
</section>

@if (Model.Any())
{
    <div class="card card-orange" style="margin:16px;">
        <div class="card-header">
            <h3 class="card-title">Concursos Base</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped projects text-center" id="tabela">
                <thead>
                    <tr class="text-lg">
                        <th style="width: 15%">
                            Nome
                        </th>
                        <th style="width: 15%">
                            Data
                        </th>
                        <th style="width: 35%">
                            Números
                        </th>
                        <th style="width: 35%">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </a>
                            </td>
                            <td>
                                <a>
                                    @item.Data.ToShortDateString()
                                </a>
                            </td>
                            <td>
                                <a>
                                    @Html.DisplayFor(modelItem => item.Numbers)
                                </a>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                    <ion-icon name="eyedrop-outline"></ion-icon>
                                    Editar
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                                    <ion-icon name="trash-outline"></ion-icon>
                                    Deletar
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Details" asp-route-id="@item.Id">
                                    <ion-icon name="folder-open-outline"></ion-icon>
                                    Concursos
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
